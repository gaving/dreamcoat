<div class="page-header">
    <h1>New scheme</h1>
</div>

<% form_for(scheme, {action: path_to.schemes(), method: 'POST', id: "scheme_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('schemes/form.ejs', {locals: {form: form, scheme: scheme}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Create scheme', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.schemes(), {class: 'btn'}) %>
    </div>
<% });%>
