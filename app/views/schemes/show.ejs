<div class="page-header">
    <h1>Details of scheme</h1>
</div>


<table class="table table-bordered">
    <tbody>
        <tr><th>name</th><td><%= scheme.name %></td></tr>
        <tr><th>url</th><td><%= scheme.url %></td></tr>    
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', path_to.edit_scheme(scheme), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.scheme(scheme), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', path_to.schemes()) %>
</div>